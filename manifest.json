{
    "manifest_version": 3,
    "name": "Website Blocker",
    "version": "0.0.1",
    "description" : "A simple site blocker that you can use to limit the days and the time passed on certain websites.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "alarms"
    ],
    "action": {
        "default_popup": "ui/popup/popup.html"
    },
    "background": {
        "service_worker": "worker/background.js",
        "type": "module"
      }
}